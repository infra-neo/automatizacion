# Docker Compose Environment Variables
# Copy this file to .env and update with your secure values
# DO NOT commit .env to version control

# Semaphore Configuration
# Generate with: openssl rand -base64 32
SEMAPHORE_ACCESS_KEY=CHANGE_ME_GENERATE_RANDOM_KEY

# Vault Configuration (Development only - use proper init in production)
VAULT_DEV_TOKEN=root-token

# Database Passwords
# IMPORTANT: Change these for production!
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
GLPI_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
SONAR_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Wildfly Configuration
WILDFLY_ADMIN_USER=admin
WILDFLY_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Nexus Configuration
NEXUS_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Jenkins Configuration
JENKINS_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Security Notes:
# 1. Generate strong passwords (min 16 characters, mixed case, numbers, symbols)
# 2. Use different passwords for each service
# 3. Never commit this file with real credentials
# 4. Rotate passwords regularly
# 5. Use Vault for production secrets management

# Generate random passwords with:
# openssl rand -base64 32
# or
# pwgen -s 32 1

{
  "dashboard": {
    "title": "Infrastructure Monitoring Dashboard",
    "tags": ["infrastructure", "monitoring", "ansible"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Rsyslog Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"rsyslog\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Log Volume by Host",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rsyslog_messages_total[5m])",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Logrotate Status",
        "type": "table",
        "targets": [
          {
            "expr": "logrotate_last_run_timestamp",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "GLPI Inventory Count",
        "type": "stat",
        "targets": [
          {
            "expr": "glpi_computers_total"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 4,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "GLPI Agent Status",
        "type": "table",
        "targets": [
          {
            "expr": "glpi_agent_last_contact_hours"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 4,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Wildfly Deployments",
        "type": "stat",
        "targets": [
          {
            "expr": "wildfly_deployment_status"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Ansible Playbook Executions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ansible_playbook_runs_total[1h])",
            "legendFormat": "{{playbook}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        }
      },
      {
        "id": 8,
        "title": "Recent Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\"rsyslog|wildfly|glpi\"}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "options": {
          "showTime": true,
          "showLabels": true,
          "wrapLogMessage": true
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
